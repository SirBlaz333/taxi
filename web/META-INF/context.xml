              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="root"
              password="root"
              url="jdbc:mysql://localhost:3306/taxi?serverTimezone=UTC"
    />
</Context>
