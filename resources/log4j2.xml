<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%sn %d{yyyy/MM/dd HH:mm:ss,SSS} %r [%-6p] [%t] %c{3} %C{3}.%M(%F:%L) â€“ %m%n"/>
        </Console>
        <File name="File" fileName="${sys:logFile}" append="true">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="DB" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="DB" level="info">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="Info" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Listener" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Listener" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Tag" level="error">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="Util" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>